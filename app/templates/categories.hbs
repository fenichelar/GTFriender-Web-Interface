<div class="col-md-2 panel panel-default">
  <div class="page-header">
    <h1>Categories</h1>
    <span class="label label-default">Select a category and sub category to view events</span>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      {{input type="text" placeholder="New category" value=newCategoryName insert-newline="createCategory" size="13"}}
      <button class="btn btn-primary btn-sm" {{action "createCategory"}} disabled={{disabled}}>Add</button>
    </li>
    {{#each model as |category|}}
      {{#link-to "categories.category.activities" category.id tagName="li" class="list-group-item"}}
        {{category.name}}
      {{/link-to}}
      {{outlet category.id}}
    {{/each}}
  </ul>
</div>
<div class="col-md-6">
  {{outlet "activity"}}
</div>
<div class="col-md-4">
  {{outlet "event"}}
</div>
