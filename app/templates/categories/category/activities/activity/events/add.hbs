<div class="panel panel-default" style="padding:20px;">
  <h1 class="page-header" align="center">Add Event</h1>
  {{#bs-form  model=this action="submit"}}
    {{bs-form-element
      controlType="text"
      label="Title"
      property="title"
      required=true
    }}
    {{bs-form-element
      controlType="text"
      label="Location"
      property="location"
    }}
    {{bs-form-element
      controlType="textarea"
      label="Description"
      property="description"
    }}
    {{bs-form-element
      controlType="string"
      label="Start"
      property="start"
      class="datepicker"
      required=true
    }}
    {{bs-form-element
      controlType="string"
      label="End"
      property="end"
      class="datepicker"
      required=true
    }}
    {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
  {{/bs-form}}
</div>

<script>
  $(document).ready(function() {
    $('.datepicker > input').datetimepicker({
      format: 'YYYY-MM-DD HH:mm',
      inline: true
    });
  })
</script>
