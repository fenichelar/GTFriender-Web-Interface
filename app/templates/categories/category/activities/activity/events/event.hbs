<div class="panel panel-default" style="padding:20px;">
  <h1 align="center">{{model.title}}</h1>

  <strong>Location:</strong> {{#if model.location}}{{model.location}}{{else}}None{{/if}}<br>
  <strong>Start:</strong> {{model.start}}<br>
  <strong>End:</strong> {{model.end}}<br>

  <br>
  <button class="btn btn-primary" {{action "showEdit"}}>Edit</button>
  <div id="edit-panel" class="panel panel-primary" style="padding:10px; display:none">
    <h2>Edit</h2>
    {{#bs-form  model=this action="submit"}}
      {{bs-form-element
        controlType="text"
        label="Title"
        property="title"
      }}
      {{bs-form-element
        controlType="text"
        label="Location"
        property="location"
      }}
      {{bs-form-element
        controlType="string"
        label="Start"
        property="start"
        class="datepicker"
      }}
      {{bs-form-element
        controlType="string"
        label="End"
        property="end"
        class="datepicker"
      }}
      {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
    {{/bs-form}}
  </div>
</div>
